{
  "manifest_version": 3,
  "name": "Czech Post Address Filler",
  "version": "0.1",
  "description": "Extension for faster filling out addresses on Czech Post website.",
  "author": "Matěj Voslař",

  "content_scripts": [
    {
      "matches": [
        "https://www.postaonline.cz/odvozy/odvozbaliku/secure/vyberZeme"
      ],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "res/icon16.png",
    "32": "res/icon32.png",
    "48": "res/icon48.png",
    "128": "res/icon128.png"
  },

  "permissions": []
}
